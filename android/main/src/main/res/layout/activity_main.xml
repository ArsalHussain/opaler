<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <!-- The main content view -->
  <LinearLayout
      android:id="@+id/main"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <!-- SuperCardToast container -->
    <LinearLayout
        android:id="@+id/card_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#15000000"
        android:orientation="vertical"
        />

    <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp" />
    <!-- adview will be inserted here -->
  </LinearLayout>
  <!-- The navigation drawer -->
  <LinearLayout
      android:orientation="vertical"
      android:layout_width="240dp"
      android:layout_height="match_parent"
      android:layout_gravity="start"
      android:paddingLeft="6dp"
      android:background="#111"
      >
    <LinearLayout
        android:id="@+id/spinner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
      <ImageView
          android:layout_width="48dp"
          android:layout_height="48dp"
          android:layout_gravity="center"
          android:scaleType="center"
          android:src="@drawable/card"
          />
      <Spinner
          android:id="@+id/cards_spinner"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="4dp"
          />
      <TextView android:id="@+id/empty_cards_spinner"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:padding="4dp"
          />
    </LinearLayout>
    <ListView android:id="@+id/drawer_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#111"
        />
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <LinearLayout
        android:id="@+id/donate_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:onClick="donate"
        android:background="@drawable/drawer_item"
        >
      <ImageView
          android:layout_width="48dp"
          android:layout_height="48dp"
          android:layout_gravity="center"
          android:scaleType="center"
          android:src="@drawable/donate"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:padding="4dp"
          android:textStyle="bold"
          android:text="Donate"
          />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/share_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:onClick="share"
        android:background="@drawable/drawer_item"
        >
      <ImageView
          android:layout_width="48dp"
          android:layout_height="48dp"
          android:layout_gravity="center"
          android:scaleType="center"
          android:src="@drawable/share"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:padding="4dp"
          android:textStyle="bold"
          android:text="Share"
          />
      <com.google.android.gms.plus.PlusOneButton
          xmlns:plus="http://schemas.android.com/apk/lib/com.google.android.gms.plus"
          android:id="@+id/plus_one_button"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          plus:size="medium"
          plus:annotation="none"
          />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/customer_care_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:onClick="dialOpal"
        android:background="@drawable/drawer_item"
        >
      <ImageView
          android:layout_width="48dp"
          android:layout_height="48dp"
          android:layout_gravity="center"
          android:scaleType="center"
          android:src="@drawable/dial"
          />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:padding="4dp"
          android:textStyle="bold"
          android:text="Opal Customer Care"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:onClick="opalFeedback"
        android:background="@drawable/drawer_item"
        >
      <ImageView
          android:layout_width="48dp"
          android:layout_height="48dp"
          android:layout_gravity="center"
          android:scaleType="center"
          android:src="@drawable/feedback"
          />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:padding="4dp"
          android:textStyle="bold"
          android:text="Opal Customer Care"
          />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:onClick="appFeedback"
        android:background="@drawable/drawer_item"
        >
      <ImageView
          android:layout_width="48dp"
          android:layout_height="48dp"
          android:layout_gravity="center"
          android:scaleType="center"
          android:src="@drawable/feedback"
          />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:padding="4dp"
          android:textStyle="bold"
          android:text="Write to Developer"
          />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/setting_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:onClick="openSettings"
        android:background="@drawable/drawer_item"
        >
      <ImageView
          android:layout_width="48dp"
          android:layout_height="48dp"
          android:layout_gravity="center"
          android:scaleType="center"
          android:src="@drawable/settings"
          />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:padding="4dp"
          android:textStyle="bold"
          android:text="Settings"
          />
    </LinearLayout>
  </LinearLayout>
</android.support.v4.widget.DrawerLayout>
